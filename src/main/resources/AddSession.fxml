<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@dashboardDesign.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddSessionController">
    <children>
        <Button fx:id="addButton" layoutX="139.0" layoutY="349.0" mnemonicParsing="false" onAction="#addSession" prefHeight="37.0" prefWidth="154.0" styleClass="add-btn" text="Add Session" />
        <TextField fx:id="nmses" layoutX="161.0" layoutY="121.0" prefHeight="57.0" prefWidth="279.0" promptText="Enter session's name" />
        <TextField fx:id="descSes" layoutX="161.0" layoutY="190.0" prefHeight="57.0" prefWidth="279.0" promptText="Enter description" />
      <TextField fx:id="driverLinkID" layoutX="161.0" layoutY="262.0" prefHeight="57.0" prefWidth="279.0" promptText="Enter drive's link" />
      <Label layoutX="128.0" layoutY="22.0" prefHeight="80.0" prefWidth="312.0" stylesheets="@dashboardDesign.css" text="Add session">
         <styleClass>
            <String fx:value="big-bold-textfield" />
            <String fx:value="shadow" />
         </styleClass>
         <font>
            <Font name="Arial" size="39.0" />
         </font>
      </Label>
      <Button fx:id="close" layoutX="503.0" layoutY="22.0" mnemonicParsing="false" onAction="#close" prefHeight="24.0" prefWidth="60.0" styleClass="close" stylesheets="dashboardDesign.css">
         <graphic>
            <FontAwesomeIcon glyphName="CLOSE" size="1.2em" />
         </graphic>
      </Button>
      <Button fx:id="minimize" layoutX="458.0" layoutY="22.0" mnemonicParsing="false" onAction="#minimize" prefHeight="24.0" prefWidth="45.0" styleClass="minimize" stylesheets="dashboardDesign.css">
         <graphic>
            <FontAwesomeIcon glyphName="MINUS" size="1.2em" />
         </graphic>
      </Button>

        <Button fx:id="getback" layoutX="327.0" layoutY="349.0" mnemonicParsing="false" onAction="#getback" prefHeight="37.0" prefWidth="154.0" styleClass="add-btn" text="Get Back" />

    </children>
</AnchorPane>
