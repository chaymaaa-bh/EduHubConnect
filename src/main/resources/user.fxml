<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserController">

    <VBox alignment="CENTER" prefWidth="600" spacing="10" style="-fx-background-color: #f0f0f0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="User Table" />

        <TableView fx:id="userTableView">
            <columns>
                <TableColumn fx:id="columnUserID" prefWidth="60.0" text="User ID" />
                <TableColumn fx:id="columnFirstName" prefWidth="120.0" text="First Name" />
                <TableColumn fx:id="columnLastName" prefWidth="120.0" text="Last Name" />
                <TableColumn fx:id="columnEmail" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="columnPassword" prefWidth="120.0" text="Password" />
                <TableColumn fx:id="columnDateOfBirth" prefWidth="100.0" text="Date of Birth" />
                <TableColumn fx:id="columnGender" prefWidth="80.0" text="Gender" />
                <TableColumn fx:id="columnRole" prefWidth="120.0" text="Role" />
                <TableColumn fx:id="columnBio" prefWidth="200.0" text="Bio" />
                <TableColumn fx:id="columnPhoneNumber" prefWidth="100.0" text="Phone Number" />
                <TableColumn fx:id="columnProfilePicture" prefWidth="200.0" text="Profile Picture" />
                <TableColumn fx:id="columnModuleID" prefWidth="60.0" text="Module ID" />
            </columns>
        </TableView>

        <Button layoutX="40.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleAddButtonAction" prefHeight="40.0" prefWidth="220.0" styleClass="login-btn" text="Add" />
        <Button layoutX="40.0" layoutY="280.0" mnemonicParsing="false" onAction="#handleUpdateButtonAction" prefHeight="40.0" prefWidth="220.0" styleClass="login-btn" text="Update" />
        <Button layoutX="40.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleDeleteButtonAction" prefHeight="40.0" prefWidth="220.0" styleClass="login-btn" text="Delete" />

    </VBox>

</AnchorPane>
